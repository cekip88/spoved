extends template/main
append vars
	-
		page_title = 'Servers'
block aside
	include parts/aside
block content
	main
		include parts/search-row
		.section.contacts
			.console-title
				h4.block-title
					span Servers
				button.button-orange.contacts-button#create-user
					svg(width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg")
						path(d="M6 10.5C8.48528 10.5 10.5 8.48528 10.5 6C10.5 3.51472 8.48528 1.5 6 1.5C3.51472 1.5 1.5 3.51472 1.5 6C1.5 8.48528 3.51472 10.5 6 10.5Z" stroke-width="0.8" stroke-linecap="round" stroke-linejoin="round")
						path(d="M4.125 6H7.875" stroke-width="0.8" stroke-linecap="round" stroke-linejoin="round")
						path(d="M6 4.125V7.875" stroke-width="0.8" stroke-linecap="round" stroke-linejoin="round")
					span Add Server
			.tabs
				input(type='radio' name='tabs' checked)#tab-1
				input(type='radio' name='tabs')#tab-2
				input(type='radio' name='tabs')#tab-3
				input(type='radio' name='tabs')#tab-4
				input(type='radio' name='tabs')#tab-5
				input(type='radio' name='tabs')#tab-6
				.tabs-labels
					label(for='tab-1').tabs-label TABLE
					label(for='tab-2').tabs-label ALPHA
					label(for='tab-3').tabs-label BETA
					label(for='tab-4').tabs-label GAMMA
					label(for='tab-5').tabs-label DELTA
					label(for='tab-6').tabs-label OMEGA
				form.servers-add
					h3.servers-title Adding Server

				.tabs-body
					.tabs-cont.tabs-cont-1
					.tabs-cont.tabs-cont-2
					.tabs-cont.tabs-cont-3
					.tabs-cont.tabs-cont-4
					.tabs-cont.tabs-cont-5
					.tabs-cont.tabs-cont-6