extends template/main
append vars
	-
		page_title= 'Users'
block aside
	include parts/aside
block content
	main
		include parts/search-row
		.section.contacts
			.console-title
				h4.block-title
					span Users
				button.button-orange.contacts-button#create-user
					svg(width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg")
						path(d="M6 10.5C8.48528 10.5 10.5 8.48528 10.5 6C10.5 3.51472 8.48528 1.5 6 1.5C3.51472 1.5 1.5 3.51472 1.5 6C1.5 8.48528 3.51472 10.5 6 10.5Z" stroke-width="0.8" stroke-linecap="round" stroke-linejoin="round")
						path(d="M4.125 6H7.875" stroke-width="0.8" stroke-linecap="round" stroke-linejoin="round")
						path(d="M6 4.125V7.875" stroke-width="0.8" stroke-linecap="round" stroke-linejoin="round")
					span Create User
				button.manage
					+img('manage.svg')
					span Manage Columns
			.table
				.table-head
					.table-row
						.col ID
						.col User Name
						.col E-mail
						.col Team Name
						.col Mobile
						.col Actions
				.table-body
					-for(let i = 0; i < 30; i++)
						.table-row
							.col 1047
							.col James Abram
							.col ja.g@devcubecom
							.col default_team
							.col +77714445566
							.col
								button
									+img('pen.svg')
								button
									+img('circle-x-fill-24.svg')
		include parts/pagination
		.form-cont
			form.form.registration-user#registration-user
				.add-block
					.add-block
						.add-row
							h5.add-title User Name
						.add-input-row
							input(type='text').add-input
					.add-block
						.add-row
							h5.add-title Team
						.add-input-row
							.add-select
								button(type='button').select-head
									span Select Team
									+img('ab.svg')
								.select-body
									button(type='button').button.option Spice Girls
									button(type='button').button.option Back Street Boys
									button(type='button').button.option Black Star
									button(type='button').button.option Spice Rangers
				.add-block
					.add-block
						.add-row
							h5.add-title E-mail
						.add-input-row
							input(type='text').add-input
					.add-block
						.add-row
							h5.add-title Mobile
						.add-input-row
							input(type='text').add-input
				.add-block
					.add-row
						h5.add-title Password
							span.add-star *
					.add-input-row
						input(type='password').add-input
				.add-block
					.add-row
						h5.add-title Confirm Password
							span.add-star *
					.add-input-row
						input(type='password').add-input
				.login-btns
					button.login-submit.button-orange Save
					button(type='button').login-submit.button-orange.cancel Cancel