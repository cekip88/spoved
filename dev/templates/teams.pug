extends template/main
append vars
	-
		page_title= 'Teams'
block aside
	include parts/aside
block content
	main
		include parts/search-row
		.section.contacts
			.console-title
				h4.block-title
					span Teams
				button.button-orange.contacts-button#create-team
					svg(width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg")
						path(d="M6 10.5C8.48528 10.5 10.5 8.48528 10.5 6C10.5 3.51472 8.48528 1.5 6 1.5C3.51472 1.5 1.5 3.51472 1.5 6C1.5 8.48528 3.51472 10.5 6 10.5Z" stroke-width="0.8" stroke-linecap="round" stroke-linejoin="round")
						path(d="M4.125 6H7.875" stroke-width="0.8" stroke-linecap="round" stroke-linejoin="round")
						path(d="M6 4.125V7.875" stroke-width="0.8" stroke-linecap="round" stroke-linejoin="round")
					span Create Team
				a(href='#').manage#manage-button
					+img('manage.svg')
					span Manage Columns
			.table
				.table-head
					.table-row
						.col.col-id ID
						.col Team Name
						.col.col-action Actions
				.table-body
					-for(let i = 0; i < 30; i++)
						.table-row
							.col.col-id 1047
							.col default_team
							.col.col-action
								button
									+img('pen.svg')
								a(href='./manage.html')
									+img('teams.svg')
								button
									+img('circle-x-fill-24.svg')
		include parts/pagination
		.form-cont
			form.form.registration-user#registration-team
				.add-block
					.add-block
						.add-row
							h5.add-title Create Name
						.add-input-row
							input(type='text').add-input
					.add-block
						.add-row
							h5.add-title Add User (s)
						.add-input-row
							.add-select
								button(type='button').select-head
									span Select Team
									+img('ab.svg')
								.select-body
									-for(let i = 0; i < 3; i++)
										label.button
											input(type='checkbox')
											span
											span Spice Girls
											span (ID)
										label.button
											input(type='checkbox')
											span
											span Back Street Boys
											span (ID)
										label.button
											input(type='checkbox')
											span
											span Black Star
											span (ID)
										label.button
											input(type='checkbox')
											span
											span Spice Rangers
											span (ID)
									button(type='button').option.done Done
					.choosen
				.login-btns
					button.login-submit.button-orange Save
					button(type='button').login-submit.button-orange.cancel Cancel
			form.form.manage-form#manage-form
				h2.title Manage Columns
				.manage-block-row
					.manage-block
						.manage-row
							h5.add-title Used Columns
						.manage-block-border
							.manage-row
								button(type='button').done Remove All
								button(type='button').done Add to Archive
							.manage-head
								span Item
								span Selected
							label.label
								input(type='checkbox')
								span ID
								span
							label.label
								input(type='checkbox')
								span Name
								span
							label.label
								input(type='checkbox')
								span Team
								span
							label.label
								input(type='checkbox')
								span Framework
								span
							label.label
								input(type='checkbox')
								span Status
								span
					.manage-block
						.manage-row
							h5.add-title Archive Columns
						.manage-block-border
							.manage-row
								button(type='button').done Remove All
								button(type='button').done Add to Archive
							.manage-head
								span Item
								span Selected
							label.label
								input(type='checkbox')
								span ID
								span
							label.label
								input(type='checkbox')
								span Name
								span
							label.label
								input(type='checkbox')
								span Team
								span
							label.label
								input(type='checkbox')
								span Framework
								span
							label.label
								input(type='checkbox')
								span Status
								span
				.manage-btns
					button.button-orange Save
					button(type='button').button-orange.cancel Cancel

